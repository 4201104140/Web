@model IEnumerable<Tai.DataModels.Category>

@if (ViewBag.IsHor)
{
    <nav class="main-navbar">
        <div class="container">
            <!-- menu -->
            <ul class="main-menu">
                <li><a href="/">Home</a></li>
                @foreach (var category in Model)
                {
                    if (category.CategoryParentId == null)
                    {
                        <li>
                            <a href="#">@category.CategoryName</a>
                            <ul class="sub-menu">
                                @foreach (var child in category.Categories)
                                {
                                    <li><a href="/@child.CategoryName.ToUrlFriendly()">@child.CategoryName</a></li>
                                }
                            </ul>
                        </li>
                    }
                }
            </ul>
        </div>
    </nav>
}
else
{
    <div class="col-lg-3 order-2 order-lg-1">
        <div class="filter-widget">
            <h2 class="fw-title">Categories</h2>
            <ul class="category-menu">
                @foreach (var category in Model)
                {
                    if (category.CategoryParentId == null)
                    {
                        <li>
                            <a href="#">@category.CategoryName</a>
                            <ul class="sub-menu">
                                @foreach (var child in category.Categories)
                                {
                                    <li><a href="/@child.CategoryName.ToUrlFriendly()">@child.CategoryName<span>@category.Products?.Count()</span></a></li>
                                }
                            </ul>
                        </li>
                    }
                }
            </ul>
        </div>
    </div>
}
